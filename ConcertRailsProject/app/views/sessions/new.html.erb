<h1>Please log in</h1>
<% if flash.notice %>
<%= flash.notice %>
<% end %>

<%= link_to "Create Account", new_user_path %><br>
<br><%= form_tag "/login" do %>

    <%= label :username, "Username" %>
    <%= text_field_tag :username %>
    <%= label :password, "Password" %>
    <%= password_field_tag :password %>
    <%= submit_tag "Login" %>

<% end %>
