<div class="main-header"><h1 id="login-text">Please log in</h1>
<% if flash.notice %>
<%= flash.notice %>
<% end %>

<div class="ui primary basic button"><%= link_to "Create Account", new_user_path %></div><br>
<br><%= form_tag "/login" do %>
</div>
<div class="sign-up">
  <%= label :username, "Username" %>
  <%= text_field_tag :username %>
  <%= label :password, "Password" %>
  <%= password_field_tag :password %>
  <%= submit_tag "Login" %>

  <% end %>
</div>
