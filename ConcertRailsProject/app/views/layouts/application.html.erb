<!DOCTYPE html>
<html>
  <head>
    <title>ConcertRailsProject</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% unless 1 == 1 && 1 == 2 %>
      <% if current_user %>
        <div class="header">
          <div>Welcome, <%= link_to current_user.username.titlecase, user_path(current_user) %>
          <%= link_to 'See all artists', artists_path %>
          <%= link_to 'See all upcoming concerts', concerts_path %>
          <%= link_to 'See all venues', venues_path %></div>
          <div><%= link_to "Logout", logout_path %></div>
        </div>
      <% else %>
        <div><%= link_to "Please log in", login_path %></div>
      <% end %>
    <% end %>
    <%= yield %>
  </body>
</html>
